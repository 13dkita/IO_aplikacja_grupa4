@model User

@section Styles
{
    <link rel="stylesheet" type="text/css" href="~/css/login_style.css">
}

@section Scripts
{
	
}


<div class="brand text-dark text-center display-5 position-absolute bg-light font-weight-bold rounded-circle py-3 px-4 shadow-lg m-5"><i class="fas fa-user-md d-block display-4 text-primary"></i> Med-DB</div>
    <div class="flex-container">
        <div class="position-absolute d-flex justify-content-center align-items-center bg-light p-5 rounded shadow-lg">
            <form asp-controller="Login" asp-action="PostLogin" method="post">
                <div class="form-group">
                    <label class="display-4 my-5">Zaloguj się do serwisu</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-primary" id="loginHelp"><i class="fas fa-user-md text-light"></i></span>
                        </div>
                        <input asp-for="Pesel" type="text" class="form-control" id="login" placeholder="Pesel" aria-describeby="peselHelp">         
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-primary" id="hasloHelp"><i class="fas fa-lock text-light"></i></span>
                        </div>
                        <input asp-for="Password" type="password" class="form-control" id="haslo" placeholder="Hasło" aria-describedby="hasloHelp">
                    </div>
                </div>
                <div class="d-flex justify-content-around px-5 py-3">
                    <button type="submit" class="btn btn-lg btn-primary">Zaloguj</button>
	                <button type="button" class="register-btn btn btn-secondary"><a href="/Auth/Register/RegisterSelf">Rejestracja / Odzyskaj hasło</a></button>
                </div>
            </form>
        </div>
    </div>
    <div class="background bg-primary">
		<div flashes></div>
    </div>
