@model User

@section Styles{
	<link rel="stylesheet" type="text/css" href="~/css/register_style.css">
}

@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
}

<div class="brand text-dark text-center display-5 position-absolute bg-light font-weight-bold rounded-circle py-3 px-4 shadow-lg m-5"><i class="fas fa-user-md d-block display-4 text-primary"></i> Med-DB</div>
<div class="flex-container">
	
	<div class="position-absolute d-flex justify-content-center align-items-center bg-light p-5 rounded shadow-lg">
		<form asp-controller="Register" asp-action="PostRegisterSelf" method="post">

			<div asp-validation-summary="ModelOnly">

			</div>

			<div class="form-group">
				<label class="display-4 mt-4 mb-0">Rejestruj się jako nowy lekarz</label>
				<br>
				<label class="display-4 mt-2 mb-4" style="font-size: 2rem;">lub odzyskaj swoje hasło</label>
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text bg-primary" id="loginHelp"><i class="fas fa-user-md text-light"></i></span>
					</div>
					<input asp-for="Pesel" class="form-control" id="pesel" placeholder="PESEL" aria-describeby="loginHelp">
					<div class="w-100">
						<span class="small text-danger" asp-validation-for="Pesel"></span>
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text bg-primary" id="hasloHelp"><i class="fas fa-lock-open text-light"></i></span>
					</div>
					<input asp-for="Password" type="password" class="form-control" id="haslo" placeholder="Nowe hasło" aria-describedby="hasloHelp">
					<div class="w-100">
						<span class="small text-danger" asp-validation-for="Password"></span>
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text bg-primary" id="haslo2Help"><i class="fas fa-lock text-light"></i></span>
					</div>
					<input name="repeatPassword" type="password" class="form-control" id="haslo2" placeholder="Powtórz hasło" aria-describedby="haslo2Help">
					<div class="w-100">
						<span class="small text-danger" asp-validation-for="Password"></span>
					</div>
				</div>
			</div>
			<small class="form-text text-muted">Nie udostępnimy Twoich danych osobowych. Są bezpieczne.</small>
			<div class="d-flex justify-content-around px-5 py-3">
				<button type="submit" class="btn btn-lg btn-primary">Potwierdź wybór</button>
				<button type="button" class="login-btn btn btn-secondary"><a href="/Auth/Login">Powrót do logowania</a></button>
			</div>
		</form>
	</div>
</div>
<div class="background bg-primary">
	<div flashes></div>
</div>
